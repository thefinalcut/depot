<div id="product_list">
  <h1>Listing products</h1>

<table>

  <% @products.sort! { |a,b| a.price <=> b.price}.reverse!.each do |product| %>
    <tr class=" <%= cycle('list_line_odd', 'list_line_even') %>">
      <td>
        <%= image_tag(product.image_url, :class => 'list_image') %>
      </td>
      <td class="list_description">
        <dl>
          <dt> <%= product.title %>
          <dd> <%= truncate(strip_tags(product.description), length: 80) %>
        </dl>
      </td>
      <td>
        <%= "$#{product.price}" %>
      </td>
      <td class="list_actions">
        <dl>
        <dt> <%= link_to 'Show', product %>
        <dt> <%= link_to 'Edit', edit_product_path(product) %>
        <dt> <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
        </dl>
      </td>
     </tr>
 <% end %>
</table>
</div>

<br/>

<%= link_to 'New Product', new_product_path %>
